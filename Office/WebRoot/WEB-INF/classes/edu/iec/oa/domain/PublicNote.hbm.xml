<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="edu.iec.oa.domain">
    <class name="PublicNote" table="t_publicNote">
        <id name="id">
            <generator class="native"></generator>
        </id>
        <property name="title"/>
        <property name="content" length="100000"/>
        <property name="authorId"/>
        <property name="author"/>
        <property name="oldAuthorId"/>
        <property name="oldAuthor"/>
        <property name="time"/>
        
        <property name="praiseCount"/>
        <property name="demoteCount"/>
        <property name="reprintCount"/>
        <property name="type"/>
        
        
	</class>
</hibernate-mapping>
